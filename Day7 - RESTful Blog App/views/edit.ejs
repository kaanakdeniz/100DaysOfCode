<%- include("./partials/header.ejs")  %>
<div class="ui main text container segment">
   <div class="ui huge header">
      Edit Blog
   </div>
   <form action="/blogs/<%= blog._id %>?_method=PUT" class="ui form" method="POST">
      <div class="field">
         <label>Title</label>
         <input type="text" name="blog[title]" placeholder="Title" value="<%= blog.title %> ">
      </div>
      <div class="field">
         <label>Image</label>
         <input type="text" name="blog[image]" placeholder="Image" value="<%= blog.image %>">
      </div>
      <div class=" field">
         <label>Blog Content</label>
         <textarea name="blog[description]" placeholder="Write something.."><%= blog.description %></textarea>
      </div>
      <div class="field">
         <input class="ui primary button" type="submit" placeholder="Submit">
      </div>

   </form>
</div>
<%- include("./partials/footer.ejs")  %>